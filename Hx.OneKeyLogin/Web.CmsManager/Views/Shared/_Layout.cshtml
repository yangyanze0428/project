<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=10;IE=9;IE=8;IE=7;IE=EDGE" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/js/easyui/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link href="~/js/easyui/themes/icon.css" rel="stylesheet" />

    <environment include="Development">
        <script src="~/js/jquery/jquery.js"></script>
    </environment>

    <environment include="Production">
        <script src="~/js/jquery/jquery.min.js"></script>
    </environment>

    <script src="~/js/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/js/easyui/jquery.easyui.min.js"></script>
    <script src="~/js/easyui/locale/easyui-lang-zh_CN.js"></script>
    <script src="~/js/easyui/datagrid-detailview.js"></script>
    <script src="~/js/dg.js"></script>
    <script src="~/js/easyui-tab-ext.js"></script>
    @RenderSection("Head", false)
</head>
<body>
    @RenderBody()

    @RenderSection("FootScript", required: false)
</body>
</html>
