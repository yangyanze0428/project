@{
    ViewBag.Title = "未认证企业";
}
<section class="content-header">
    <h1>
        企业认证流程
    </h1>
</section>
<section class="content">
    <div class="box">
        <div class="box-body">
            <ul class="timeline">
                <li>
                    <!-- timeline icon -->
                    <i class="fa fa-hand-pointer-o bg-blue"></i>
                    <div class="timeline-item">
                        <span class="time"></span>
                        <h3 class="timeline-header"><a href="#">第一步</a></h3>
                        <div class="timeline-body">
                            提交审核
                        </div>
                        <div class="timeline-footer">
                        </div>
                    </div>
                </li>
                <li>
                    <!-- timeline icon -->
                    <i class="fa fa-hand-peace-o bg-yellow"></i>
                    <div class="timeline-item">
                        <span class="time"></span>
                        <h3 class="timeline-header"><a href="#">第二步</a></h3>
                        <div class="timeline-body">
                            等待审核结果
                        </div>
                        <div class="timeline-footer">
                        </div>
                    </div>
                </li>
                <li>
                    <!-- timeline icon -->
                    <i class="fa fa-hand-rock-o bg-green"></i>
                    <div class="timeline-item">
                        <span class="time"></span>
                        <h3 class="timeline-header"><a href="#">第三步</a> </h3>
                        <div class="timeline-body">
                            通知审核结果
                        </div>
                        <div class="timeline-footer">
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <div class="box-footer col-xs-12 text-center">
            @if (ViewBag.AuditResult=="-")
            {
                <button type="button" onclick="sub()" class="btn btn-info btn-lrg ajax" title="企业认证">
                    <i class="fa fa-graduation-cap"></i>去认证
                </button>
            }
            else
            {
                <h3>审核结果：<b>@ViewBag.AuditResult</b></h3>
            }
        </div>
    </div>
</section>

@section footScript{
    <script>
        function sub() {
            location.href = "/Authenty/Modify";
        }
    </script>
}